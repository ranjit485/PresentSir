<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/complaint_BOX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurfaceContainer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/complaint_no"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:textStyle="bold"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:text="1" />

            <TextView
                android:id="@+id/complaint_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimaryContainer"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_toEndOf="@+id/complaint_no"
                android:layout_marginTop="10dp"
                android:text="Canteen"/>

            <TextView
                android:id="@+id/complaint_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:maxLength="100"
                android:layout_toEndOf="@+id/complaint_no"
                android:layout_below="@+id/complaint_type"
                android:text="Video patv ki pic, ewww, J one zlo k, zopa,Canteen madhi cha peyla jatu aani nusta bastu.Colleg madhi sundar muli nahit"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>